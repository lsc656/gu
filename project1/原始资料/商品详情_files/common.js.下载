$(function () {
    window.onresize = function () {
        var a = $(".backdiv").attr("data-h"); if (a) {
            var b = $(window).height();
            $(".iframbox div").css("margin-top", (b - a) / 2)
        }
    }; $(".close").click(function () { $(window.parent.window.document).find(".iframbox")[0].click() })
}); function shopyuyue(d, c, a) { var b = '<div class="backdiv hide" data-h=\'' + a + '\'  style=\'position: fixed; top: 0px;left: 0px; width: 100%;height: 100%;  background-color: #000; opacity: 0.5;filter: alpha(opacity=50); z-index: 9999;display: none;\' ><input type="hidden" id="closediv" onclick=\'closebacdiv()\' /><input type="hidden" id="yyygssm" /></div>'; b += '<div class="iframbox hide" onclick=\'closebacdiv()\'  style=\'position: fixed;top: 0px;left: 0px; width: 100%;height: 100%;z-index: 10000;display: none;\'><div style="margin: auto;background-color: #fff;"><iframe frameborder="no" border="0" marginwidth="0" marginheight="0" scrolling="no" id="bigifram"  ></iframe></div></div>'; if ($(".backdiv").length == 0) { $("body").append(b) } $("#bigifram").attr("src", d); $(".backdiv").fadeIn(300, function () { $(".iframbox").show() }); $(".iframbox div").width(c); $(".iframbox div").height(a); $("#bigifram").width(c); $("#bigifram").height(a); resetfix(a) } function resetfix(a) { var b = $(window).height(); $(".iframbox div").css("margin-top", (b - a) / 2) } function closebacdiv() { $("body").find(".iframbox").remove(); $(".backdiv").fadeOut(300, function () { $("body").find(".backdiv").remove() }) };
