// 搜索框焦点
function searchBoxFocus(obj) {
    var ref = obj.getAttribute('refvalue');
    if (obj.value == ref) {
        obj.value = '';
        $(obj).addClass('ibox_focus');
    }
}
// 搜索框失焦
function searchBoxBlur(obj) {
    var ref = obj.getAttribute('refvalue');
    if (obj.value == '') {
        obj.value = ref;
        $(obj).removeClass('ibox_focus');
    }
}
