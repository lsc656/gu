// 获得购物车商品数量及试戴商品html
function GetCartNumber(isShow) {
   
    $.get("/ajax/CartList.ashx", function (data) {
        var str = "<ul>";
        for (var i = 0; i < data.Goodslist.length; i++) {
            str += "<li> <div><a  href='" + data.Goodslist[i].GoodsUrl + "' target='_blank'><img class=\"cart-img\" src=\"" + data.Goodslist[i].GoodsImage + "\" width=\"62\" height=\"62\"></a></div>" +
        "<div class=\"cart-shd-right\"><div><a  href='" + data.Goodslist[i].GoodsUrl + "' target='_blank'><span class=\"f-l\">" + data.Goodslist[i].GoodsName + "</span></a></div><br/><span class=\"f-r\">￥" + data.Goodslist[i].SalePrice + "×" + data.Goodslist[i].Qty + "</span></div></li>";

        }
        str += "</ul> <div class=\"cart-bottom\"><div class=\"btm-left\"><p>共" + data.GetTotalGoods + "件</p><p class=\"price-red\">" + data.GetTotalAmount + "元</p></div><div class=\"btm-right\"><button style=\"border:none\" onclick=\"linkblank('/cart.html')\" >去结算</button></div></div>  ";
        $("#myCartQty").html(data.GetTotalGoods);
        if (data.Goodslist.length == 0) {
            str = " <div class=\"nothing-msg\"> <p>购物车中还没有商品,赶紧选购吧!</p></div>";
        }
        $(".cart-shd").html(str);
       
    }, "json");
   
    //$.post("/ajax/cart.ashx?GetCartNumber=1", function (data) {  
    //    if (data != null) {
    //        var getValues = data.split('|');
    //        if (getValues.length == 2) {
